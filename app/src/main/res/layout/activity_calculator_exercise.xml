<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    tools:context=".CalculatorExercise">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="357dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.90999997">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnNum7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:width="60dp"
                android:height="60dp"
                android:backgroundTint="#736D6D"
                android:fontFamily="sans-serif-black"
                android:text="7"
                android:textSize="24sp"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/btnNum8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:width="60dp"
                android:height="60dp"
                android:backgroundTint="#736D6D"
                android:fontFamily="sans-serif-black"
                android:text="8"
                android:textSize="24sp"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/btnNum9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:width="60dp"
                android:height="60dp"
                android:backgroundTint="#736D6D"
                android:fontFamily="sans-serif-black"
                android:text="9"
                android:textSize="24sp"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:width="60dp"
                android:height="60dp"
                android:backgroundTint="#DA9A3C"
                android:fontFamily="sans-serif-black"
                android:text="+"
                android:textSize="24sp"
                app:cornerRadius="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnNum4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:width="60dp"
                android:height="60dp"
                android:backgroundTint="#736D6D"
                android:fontFamily="sans-serif-black"
                android:text="4"
                android:textSize="24sp"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/btnNum5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:width="60dp"
                android:height="60dp"
                android:backgroundTint="#736D6D"
                android:fontFamily="sans-serif-black"
                android:text="5"
                android:textSize="24sp"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/btnNum6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:width="60dp"
                android:height="60dp"
                android:backgroundTint="#736D6D"
                android:fontFamily="sans-serif-black"
                android:text="6"
                android:textSize="24sp"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:width="60dp"
                android:height="60dp"
                android:backgroundTint="#DA9A3C"
                android:fontFamily="sans-serif-black"
                android:text="-"
                android:textSize="24sp"
                app:cornerRadius="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnNum1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:width="60dp"
                android:height="60dp"
                android:backgroundTint="#736D6D"
                android:fontFamily="sans-serif-black"
                android:text="1"
                android:textSize="24sp"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/btnNum2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:width="60dp"
                android:height="60dp"
                android:backgroundTint="#736D6D"
                android:fontFamily="sans-serif-black"
                android:text="2"
                android:textSize="24sp"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/btnNum3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:width="60dp"
                android:height="60dp"
                android:backgroundTint="#736D6D"
                android:fontFamily="sans-serif-black"
                android:text="3"
                android:textSize="24sp"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:width="60dp"
                android:height="60dp"
                android:backgroundTint="#DA9A3C"
                android:fontFamily="sans-serif-black"
                android:text="/"
                android:textSize="24sp"
                app:cornerRadius="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:width="60dp"
                android:height="60dp"
                android:backgroundTint="#736D6D"
                android:fontFamily="sans-serif-black"
                android:text="C"
                android:textSize="24sp"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/btnNum0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:width="60dp"
                android:height="60dp"
                android:backgroundTint="#736D6D"
                android:fontFamily="sans-serif-black"
                android:text="0"
                android:textSize="24sp"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/btnPeriod"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:width="60dp"
                android:height="60dp"
                android:backgroundTint="#736D6D"
                android:fontFamily="sans-serif-black"
                android:text="."
                android:textSize="24sp"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:width="60dp"
                android:height="60dp"
                android:backgroundTint="#DA9A3C"
                android:fontFamily="sans-serif-black"
                android:text="*"
                android:textSize="24sp"
                app:cornerRadius="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEquals"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:width="60dp"
                android:height="60dp"
                android:backgroundTint="#434242"
                android:fontFamily="sans-serif-black"
                android:text="="
                android:textSize="24sp"
                app:cornerRadius="30dp" />

        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/cont"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:background="#9A9595"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="textEnd"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/cont2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.791" />

    <EditText
        android:id="@+id/cont2"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:background="#9A9595"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="textEnd"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.84000003" />

</androidx.constraintlayout.widget.ConstraintLayout>